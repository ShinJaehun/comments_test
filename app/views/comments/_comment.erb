<ul>
<li id="comment_<%= comment.id %>" class="comment">
  <%= comment.content %>,
  <%= time_ago_in_words(comment.created_at) %> ago

  <div>
    <%= comment.user.email %> &bull;
    <%= localize(comment.created_at, format: :long) %> &bull;
    <%= link_to "Edit", edit_polymorphic_path([comment.commentable, comment]), class: 'edit-comment-link' %> &bull;
    <%= link_to "Destroy", [comment.commentable, comment], method: :delete, class: 'delete-comment-link' %> &bull;
    <%= link_to "Reply", polymorphic_path([:reply, comment.commentable, comment]), class: 'reply-comment-link' %>
  </div>

  <div>
  <% if comment.replies.any? %>
    <ul>
     <%= render comment.replies %>
    </ul>
  <% end %>
  </div>
</li>
</ul>
